# Basic Hyprland Configuratio# Hyprland Configuration File

# General settings
vfr = 60                        # Refresh rate (frames per second)
force_vfr = yes                 # Force the refresh rate
damage_tracking = full          # Optimize rendering for minimal damage

# Workspace layout
workspace_layout = master       # Master/stack layout for workspaces

# Animations
# Enable smooth animations
animation = bezier 0.25, 0.5, 0.5, 1.0 # Animation curve
animation_speed = 1.0          # Animation speed (default 1.0)

# Borders and gaps
border_size = 2
gaps_in = 15                    # Inner gaps
gaps_out = 15                   # Outer gaps

# Keybindings
bind = SUPER+Return, exec, alacritty  # Launch terminal
bind = SUPER+d, exec, rofi -show drun # Launch application launcher
bind = SUPER+q, close                 # Close focused window
bind = SUPER+f, fullscreen            # Toggle fullscreen
bind = SUPER+Shift+q, kill            # Kill focused window forcefully

# Screenshot tools
bind = SUPER+s, exec, grim -g "$(slurp)" ~/Pictures/screenshot_$(date +'%Y-%m-%d_%H-%M-%S').png

# Wallpaper
exec-once = swaybg -i ~/Pictures/wallpaper.jpg -m fill

# Display settings
monitor = *, preferred, auto    # Auto-detect and set display configuration

# Bar (Waybar or equivalent)
exec-once = waybar               # Launch Waybar as the bar

# Window rules
# Example: Set floating windows
windowrule = float, class:^mpv$
windowrule = float, class:^Gimp$

# Startup programs
exec-once = nm-applet            # Network Manager Applet
exec-once = blueman-applet       # Bluetooth Manager
exec-once = xidlehook --not-when-fullscreen --timer 600 'swaylock -f' '' # Idle lock screen
